{
  "manifest_version": 2,
  "name": "AI Assistant Field Popover",
  "version": "1.0",
  "description": "Displays an 'AI Assistant' popover when a text input field is clicked and provides AI-powered phrase suggestions.",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

